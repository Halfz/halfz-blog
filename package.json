{
  "name": "halfz-blog",
  "private": true,
  "scripts": {
    "start": "react-static start",
    "stage": "react-static build --staging",
    "build": "react-static build && del-cli \"halfz.github.io/!(.git/**)\" && copyfiles -u 1 dist/**/* halfz.github.io",
    "analyze": "react-static build --analyze",
    "serve": "serve dist -p 3000",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "stylelint"
    ]
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "axios": "^0.18.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-static": "7.1.0",
    "react-static-plugin-reach-router": "7.0.10",
    "react-static-plugin-sitemap": "7.0.10",
    "react-static-plugin-source-filesystem": "7.1.0",
    "styled-components": "^4.2.0"
  },
  "pre-commit": [
    "lint:staged"
  ],
  "devDependencies": {
    "babel-eslint": "9.x",
    "eslint": "5.16.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-config-react-tools": "1.x.x",
    "eslint-plugin-flowtype": "2.x",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-react-hooks": "1.6.0",
    "serve": "10.1.2",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.6.0",
    "lint-staged": "8.1.7",
    "pre-commit": "1.2.2",
    "copyfiles": "^2.1.0",
    "del-cli": "^2.0.0"
  }
}
